<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hpdxay.hpd3dmgame.fragments.ChapterFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/id_chapter_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="center"
        app:tabIndicatorColor="#ff0099"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#ff3c00"
        app:tabTextColor="#FF000000" />

    <android.support.v4.view.ViewPager
        android:id="@+id/id_chapter_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
