<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_item_chapter_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5px"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/id_item_chapter_comment_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:actualImageScaleType="fitXY"
        app:failureImage="@mipmap/head_photo_default"
        app:placeholderImage="@mipmap/head_photo_default"
        app:placeholderImageScaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_item_chapter_comment_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="用户名"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_item_chapter_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="评论内容" />

    </LinearLayout>
</LinearLayout>